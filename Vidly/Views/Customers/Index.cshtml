@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>Customers</h2>
    <p>Registered Customers</p>
    @if (Model.Count == 0)
    {
        <text>There are no customers registered</text>
    }
    else
    {
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th></th>
                    <th> Customer </th>
                    <th> Membership Type</tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>
                            <a href="/customers/edit/@customer.Id">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                        </td>
                        <td>
                            <a href="/customers/details/@customer.Id"> @customer.Name </a>
                        </td>
                        <td>@customer.MembershipType.Description</td>
                    </tr>
                }
            </tbody>
        </table>

    }

    @Html.ActionLink("Add Customer", "New")
</div>