@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>Customers</h2>
    <p>Registered Customers</p>
    @if (Model.Count == 0)
    {
        <text>There are no customers registered</text>
    }
    else
    {
        <table id="customers" class="table table-hover table-bordered">
            <thead>
            <tr>
                <th></th>
                <th></th>
                <th> Customer </th>
                <th> Membership Type</tr>
            </thead>
            <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>
                        <a href="/customers/edit/@customer.Id">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                    </td>
                    <td>
                        <button data-customer-id="@customer.Id" class="btn-link glyphicon glyphicon-trash"></button>
                    </td>
                    <td>
                        <a href="/customers/details/@customer.Id"> @customer.Name </a>
                    </td>
                    <td>@customer.MembershipType.Description</td>
                </tr>
            }
            </tbody>
        </table>

    }

    @Html.ActionLink("Add Customer", "New")
</div>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#customers .glyphicon-trash").on("click",
                function() {

                    var button = $(this);

                    bootbox.confirm("Are you sure you want to delete this customer?", function(result) {
                        if (result)
                            $.ajax({
                                url: "/api/customers/" + button.attr("data-customer-id"),
                                method: "DELETE",
                                success: function () {
                                    button.parents("tr").remove();
                                }
                            });
                    });
                });
        });
    </script>
}
